@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>EmpID</th>
        <th>Name</th>
        <th>Date</th>
        <th>Attendance</th>
        <th>Options</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>
                <a href="@Url.Action("Edit","Attend", new { @id = Model.Rows[i][0] })">Edit</a> |
                <a href="@Url.Action("Delete","Attend", new { @id = Model.Rows[i][0] })">Delete</a>
            </td>
        </tr>
    }
</table>
<a href="@Url.Action("Create","Attend")">Add Attendance</a>

